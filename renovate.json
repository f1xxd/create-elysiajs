{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "schedule": [
        "before 4am"
    ],
    "automerge": true,
    "extends": ["config:recommended", ":dependencyDashboard"],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "bumpVersion": "patch",
    "customManagers": [{
        "fileMatch": ["deps.ts$"],
        "datasourceTemplate": "npm",
        "matchStrings": ["\"?(?<depName>.*?)\"?: \"\\^?(?<currentValue>.*?)\""],
        "autoReplaceStringTemplate": "\"{{{depName}}}\": \"\\^{{{newValue}}}\""
    }]
  }